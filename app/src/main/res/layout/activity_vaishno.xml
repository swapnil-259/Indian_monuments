<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vaishno"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESTAURANT NEAR VAISHNO DEVI"
        android:textColor="@color/black"
        style="bold"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        tools:ignore="HardcodedText">
    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="130dp"
                android:src="@drawable/mcdonalds"
                tools:ignore="ContentDescription">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="McDONALD'S"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="145dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#14 of 75 Restaurants in Jammu City\n
Shop No.1, Ground Floor, Commercial Comlpex\n
0.4 km from Vaishno Devi Mandir\n
Cuisines: Fast food"
                android:textSize="12.8sp"

                android:layout_marginStart="150dp"
                android:layout_marginTop="22dp"
                android:textColor="@color/black"
                tools:ignore="HardcodedText">
            </TextView>

            <Button
                android:id="@+id/vstmaa1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="95dp"
                android:text="visit"
                android:textSize="10sp"
                tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,SmallSp">

            </Button>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/blue"
                tools:ignore="ContentDescription">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="BLUE CORIANDER-THE RESTAURANT"
                android:layout_marginStart="150dp"
                android:textSize="14sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#16 of 75 Restaurants in Jammu City\n
BC Road Jammu Near Jammu ISBT\n
0.6 km from Vaishno Devi Mandir\n
Cuisines: Chinese, Indian, European"
                android:layout_marginStart="150dp"
                android:layout_marginTop="40dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                tools:ignore="HardcodedText">
            </TextView>

            <Button
                android:id="@+id/vstmaa2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="97dp"
                android:text="visit"
                android:textSize="10sp"
                tools:ignore="HardcodedText,SmallSp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/lime"
                tools:ignore="ContentDescription">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginStart="150dp"
                android:text="THE LIME TREE"

                android:textStyle="bold"
                tools:ignore="HardcodedText">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#20 of 75 Restaurants in Jammu City\n
BC Road Jammu Near Jammu ISBT\n
0.6 km from Vaishno Devi Mandir\n
Cuisines: Indian, European, Chinese"
                android:layout_marginTop="30dp"
                android:layout_marginStart="150dp"
                android:textSize="13sp"
                android:textColor="@color/black"
                tools:ignore="HardcodedText">
            </TextView>

            <Button
                android:id="@+id/vstmaa3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="90dp"
                android:text="visit"
                android:textSize="10sp"
                tools:ignore="HardcodedText,SmallSp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="145dp"
                android:layout_height="150dp"
                android:src="@drawable/earthen"
                tools:ignore="ContentDescription">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EARTHEN OVEN RESTAURANT"
                android:textSize="16sp"
                android:layout_marginStart="155dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="HardcodedText">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="45dp"
                android:text="#13 of 75 Restaurants in Jammu City
9 Gulab Singh Marg\n
1 km from Vaishno Devi Mandir\n
Cuisines: Indian, Asian"
                android:textColor="@color/black"
                android:textSize="12.5sp"
                tools:ignore="HardcodedText,TextSizeCheck" />

            <Button
                android:id="@+id/vstmaa4"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="190dp"
                android:layout_marginTop="99dp"
                android:text="visit"
                android:textSize="10sp"
                tools:ignore="HardcodedText,SmallSp,TextSizeCheck" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>