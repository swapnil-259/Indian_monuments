<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/maintext"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingTop="10dp"
        android:layout_marginStart="40dp"
        android:text="Indian Monuments"
        android:textColor="@color/white"
        android:textSize="23sp"
        tools:ignore="HardcodedText,RtlSymmetry" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@color/black">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="taj mahal"
                android:layout_marginTop="150dp"
                android:background="@color/cardview_shadow_start_color"
                android:textColor="@color/black"
                tools:ignore="HardcodedText,RtlHardcoded">
            </androidx.appcompat.widget.AppCompatButton>

            <ImageView
                android:id="@+id/img1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:srcCompat="@drawable/taj"
                tools:ignore="ContentDescription"
                android:background="@color/black"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn2"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="qutub minar"
                android:layout_marginStart="10dp"
                android:layout_marginTop="150dp"
                android:background="@color/cardview_shadow_start_color"
                android:textColor="@color/black"
                tools:ignore="HardcodedText">
            </androidx.appcompat.widget.AppCompatButton>
            <ImageView
                android:id="@+id/img2"
                android:layout_marginStart="10dp"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/download"
                android:background="@color/black"
                tools:ignore="ContentDescription">
            </ImageView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@color/black">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn3"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="prem mandir"
                android:layout_marginTop="160dp"
                android:background="@color/cardview_shadow_start_color"
                android:textColor="@color/black"
                tools:ignore="HardcodedText">
            </androidx.appcompat.widget.AppCompatButton>

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:background="@color/black"
                android:src="@drawable/premmandir"
                tools:ignore="ContentDescription,ImageContrastCheck" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn4"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="vaishno devi"
                android:layout_marginTop="160dp"
                android:layout_marginStart="10dp"
                android:background="@color/cardview_shadow_start_color"
                android:textColor="@color/black"
                tools:ignore="HardcodedText">
            </androidx.appcompat.widget.AppCompatButton>

            <ImageView
                android:layout_width="160dp"
                android:layout_marginStart="10dp"
                android:layout_height="160dp"
                android:src="@drawable/maa"
                android:background="@color/black"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription,HardcodedText">
            </ImageView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn5"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="160dp"
                android:background="@color/cardview_shadow_start_color"
                android:text="jagannath puri"
                android:textColor="@color/black"
                tools:ignore="HardcodedText,TextSizeCheck" />

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/jagarnath"
                android:background="@color/black"
                tools:ignore="ContentDescription">
            </ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/black">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn6"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:text="india gate"
                android:layout_marginTop="160dp"
                android:background="@color/cardview_shadow_start_color"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                tools:ignore="HardcodedText">
            </androidx.appcompat.widget.AppCompatButton>

            <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/india"
                android:layout_marginStart="10dp"
                android:background="@color/black"
                tools:ignore="ContentDescription">
            </ImageView>
        </androidx.cardview.widget.CardView>
    </LinearLayout>




</LinearLayout>