<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESTAURANT NEAR TAJ MAHAL"
        android:textColor="@color/black"
        style="bold"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        tools:ignore="HardcodedText">
    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/johney"
                android:contentDescription="TODO"
                tools:ignore="ContentDescription,HardcodedText">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JOHNEY'S PLACE"
                android:layout_marginLeft="150dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#8 of 412 Restaurants in Agra\nTaj Ganj,
0.6 km from Taj Mahal\n
“10/10 Food 10/10 Service”\n
Cuisines: Indian, Asian, Healthy"
                android:textSize="12sp"

                android:layout_marginStart="150dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/black"
                tools:ignore="HardcodedText">
            </TextView>

            <Button
                android:id="@+id/vsttaj1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="100dp"
                android:text="visit"
                android:textSize="10sp"
                tools:ignore="HardcodedText,SmallSp,TextSizeCheck,DuplicateSpeakableTextCheck">

            </Button>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="160dp"
                android:layout_height="140dp"
                android:src="@drawable/treat"
                tools:ignore="ContentDescription">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="TREAT RESTAURANT"
                android:textSize="18sp"
                android:layout_marginStart="150dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#7 of 412 Restaurants in Agra\nKinari Bazar, Kaserat Bazar Tajmahal \nTajganj
0.6 km from Taj Mahal\n
Cuisines: Indian, Asian, Japanese"
                android:layout_marginStart="150dp"
                android:layout_marginTop="23dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:ignore="HardcodedText">
            </TextView>

            <Button
                android:id="@+id/vsttaj2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="80dp"
                android:text="visit"
                android:textSize="10sp"
                tools:ignore="HardcodedText,SmallSp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/yes"
                tools:ignore="ContentDescription">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text="YES RESTAURANT"
                android:textStyle="bold"
                tools:ignore="HardcodedText">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#29 of 412 Restaurants in Agra\n2/78 Western Gate Taj Mahal\n
0.6 km from Taj Mahal\n
Cuisines: Indian"
                android:layout_marginTop="35dp"
                android:layout_marginStart="150dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                tools:ignore="HardcodedText">
            </TextView>

            <Button
                android:id="@+id/vsttaj3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="90dp"
                android:text="visit"
                android:textSize="10sp"
                tools:ignore="HardcodedText,SmallSp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="143dp"
                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/hrs"
                tools:ignore="ContentDescription">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25-HOURS HANGOUT CAFE"
                android:layout_marginStart="155dp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#10 of 412 Restaurants in Agra\nTaj East Gate Rd infront of Hotel Oberoi\n Amarvilas near Taj Nature walk.\n
0.9 km from Taj Mahal\n
Cuisines: Italian, Chinese, Fast food, Asian, Pub"
                android:layout_marginStart="150dp"
                android:layout_marginTop="38dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:ignore="HardcodedText">
            </TextView>

            <Button
                android:id="@+id/vsttaj4"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="110dp"
                android:text="visit"
                android:textSize="10sp"
                tools:ignore="HardcodedText,SmallSp,TextSizeCheck" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>