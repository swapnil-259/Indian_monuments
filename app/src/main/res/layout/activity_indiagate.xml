<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESTAURANT NEAR INDIA GATE"
        android:textColor="@color/black"
        style="bold"
        android:textSize="23sp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        tools:ignore="HardcodedText">
    </TextView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="145dp"
                android:src="@drawable/sabab"
                tools:ignore="ContentDescription">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SABABA CAFE"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginLeft="150dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#714 of 7,099 Restaurants in New Delhi\n
1601-05 Main Bazar Paharganj\n
0.1 km from India Gate\
Cuisines: Italian, Asian, Tibetan, Nepalese"

                android:layout_marginLeft="150dp"
                android:layout_marginTop="40dp"
                android:textColor="@color/black"
                android:textSize="13.5sp"
                tools:ignore="HardcodedText,RtlHardcoded">
            </TextView>

            <Button
                android:id="@+id/vstig1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="100dp"
                android:text="visit"
                android:textSize="11sp"
                tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,RtlHardcoded">

            </Button>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="142dp"
                android:layout_height="150dp"
                android:src="@drawable/asian"
                tools:ignore="ContentDescription">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="ASIAN HAUS"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="150dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#913 of 7,099 Restaurants in New Delhi\n
87 Zamrudpur East of Kailash\n
0.1 km from India Gate\n
Cuisines: Chinese, Asian, Thai, Malaysian"
                android:layout_marginStart="150dp"
                android:layout_marginTop="40dp"
                android:textSize="13sp"
                android:textColor="@color/black"
                tools:ignore="HardcodedText">
            </TextView>

            <Button
                android:id="@+id/vstig2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="100dp"
                android:text="visit"
                android:textSize="10sp"
                tools:ignore="HardcodedText,SmallSp"></Button>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="140dp"
                android:layout_height="130dp"
                android:src="@drawable/red"
                tools:ignore="ContentDescription">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:text="RED BREEKS CAFE"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#1,616 of 7,099 Restaurants in New Delhi\n
2nd Floor H - 6/ B Kalkaji Main Road Opposite Ram Optical New Delhi
0.1 km from India Gate\n
Cuisines: Fast food, Chinese"
                android:layout_marginTop="20dp"
                android:layout_marginStart="150dp"
                android:textColor="@color/black"
                android:textSize="13.5sp"
                tools:ignore="HardcodedText">
            </TextView>

            <Button
                android:id="@+id/vstig3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="94dp"
                android:text="visit"
                android:textSize="10sp"
                tools:ignore="HardcodedText,SmallSp"></Button>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="145dp"
                android:layout_height="150dp"
                android:src="@drawable/jugger"
                tools:ignore="ContentDescription">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JUGGERNAUT"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginStart="155dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#2,370 of 7,099 Restaurants in New Delhi\n
 reviewsGround Floor C-11 Rajouri Garden\n
0.1 km from India Gate\n
“a nice place to eat”\n
Cuisines: Indian"
                android:layout_marginStart="155dp"
                android:layout_marginTop="18dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                tools:ignore="HardcodedText">
            </TextView>

            <Button
                android:id="@+id/vstig4"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginStart="200dp"
                android:layout_marginTop="90dp"
                android:text="visit"
                android:textSize="10sp"
                tools:ignore="HardcodedText,SmallSp"></Button>
        </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>